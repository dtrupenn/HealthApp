<div class="page-header">
  <div class="row-fluid">
    <div class="span8">
      <h1>Forum</h1>
    </div>
    </<div class="span4">
      <a class="btn btn-info" data-toggle="modal" href="#myModal">Ask a Question</a>
      <div class="modal hide fade" id="myModal">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">x</a>
          <h3>Post Question</h3>
        </div>
        <%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
        <div class="modal-body">
            <div class="control-group">
              <%= f.label :title, :class => 'control-label', :for => "title" %>
              <div class="controls">
                <%= f.text_field :title, :class => 'input-xlarge', :id => "title" %>
              </div> 
            </div>
            <div class="control-group">
              <%= f.label :content, :class => 'control-label', :for => "body" %>
              <div class="controls">
                <%= f.text_area :content, :class => 'input-xlarge', :rows => 6, :id => "body" %>
              </div> 
            </div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>
        <div class="modal-footer">
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </div>
        <% end %>
      </div> <!-- Form Ends -->
    </div>
   </div>
</div>

<br />

<% @posts.each do |post| %>
<div class="container">
  <div class="well">
    <div class="page-header">
      <h1> <%= post.title %> </h1>
      <h2><small>Author: <%= User.find(post.user_id).name %></small></h2>
    </div>
    <p class= "lead"><%= post.content %></p>

    <small> <%= post.created_at.strftime("%a %B #{post.created_at.day.ordinalize}, %I:%M %p ") %> </small>
    <h2><small>Tags:  </small></h2>
    <% post.hash_t.each do |tag| %>
      <button class="btn btn-small btn-primary"><%= tag.tag %></button>
    <% end %>
    <% if current_user.id == post.user_id%> <!-- User is allowed to delete or edit posts -->
    <!--Edit Post-->
      <a class="btn" data-toggle="modal" href="#myModal2">Edit</a>
      <div class="modal hide fade" id="myModal2">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">x</a>
          <h3>Edit Post</h3>
        </div>
        <%= form_for post, :html => { :class => 'form-horizontal' } do |f| %>
        <div class="modal-body">
            <div class="control-group">
              <%= f.label :title, :class => 'control-label', :for => "title" %>
              <div class="controls">
                <%= f.text_field :title, :class => 'input-xlarge', :id => "title" %>
              </div> 
            </div>
            <div class="control-group">
              <%= f.label :content, :class => 'control-label', :for => "body" %>
              <div class="controls">
                <%= f.text_area :content, :class => 'input-xlarge', :rows => 6, :id => "body" %>
              </div> 
            </div>
        </div>
        <div class="modal-footer">
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    <!--Delete Post-->
      <a class="btn" href="#">Delete</a>
    <% end %>
  </div>  

  <div class="well">
    <div class="page-header">
      <h2>Comments:</h2>
    </div>

    <% post.comment.each do |comment| %>
      <div class="well" id="comment">
        <div class="container">
          <p class="tab"><%= comment.content %></p>
        </div>
        <br />
        <hr />
        <h5 class="tab"> Author: <%= User.find(comment.user_id).name %></h5>
        <small class="tab"><%= comment.created_at.strftime("%a %B #{post.created_at.day.ordinalize}, %I:%M %p ") %></small>
        <% if current_user.id == comment.user_id%> <!-- User is allowed to delete or edit comments -->
        <!--Edit Comment-->
          <a class="btn" data-toggle="modal" href="#myModal3">Edit</a>
          <div class="modal hide fade" id="myModal3">
            <div class="modal-header">
              <a class="close" data-dismiss="modal">x</a>
              <h3>Edit Comment</h3>
            </div>
            <%= form_for comment, :html => { :class => 'form-horizontal' } do |f| %>
            <div class="modal-body">
              <div class="control-group">
                <%= f.label :content, :class => 'control-label', :for => "body" %>
                <div class="controls">
                  <%= f.text_area :content, :class => 'input-xlarge', :rows => 6, :id => "body" %>
                </div> 
              </div>
            </div>
            <div class="modal-footer">
              <%= f.submit nil, :class => 'btn btn-primary' %>
            </div>
            <% end %>
          </div>
        <!--Delete Comment-->
          <a class="btn" href="#">Delete</a>
        <% end %>
      </div>
    <% end %>

    <h5>Add your own comment</h5>
    <%= form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
      <fieldset>
        <%= f.text_area :content, :class => 'input-xlarge', :columns => 120, :rows => 5, :id => "textarea", :placeholder => "Add new comment"%>
      </fieldset>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :post_id, :value => post.id %>
      <br />
      <%= f.submit "Submit", :class => 'btn btn-info' %>
    <% end %>
  </div>
</div>
<hr>
<% end %>
    
